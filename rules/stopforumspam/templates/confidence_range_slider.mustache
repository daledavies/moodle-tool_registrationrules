{{!
    @template registrationrule_stopforumspam/confidence_range_slider

    Range slider form input used for selecting confidence level in Stop Forum Spam
    registration rule plugin settings.

    Context variables required for this template:
        * element
            * id
            * name
            * value

    Example context (json):
    {   "element": {
            "wrapperid": "fitem_id_ipconfidence",
            "id": "id_ipconfidence",
            "name": "ipconfidence",
            "error": null,
            "iderror": "id_error",
            "frozen": false,
            "hardfrozen": false,
            "value": "71"
        }
    }
}}
{{< core_form/element-template }}
    {{$element}}
        <input type="range"
            class="form-confidence-range form-control {{#error}}is-invalid{{/error}}"
            name="{{element.name}}"
        {{#element.frozen}}
            readonly {{#element.hardfrozen}}disabled{{/element.hardfrozen}}
        {{/element.frozen}}
            id="{{element.id}}"
            value="{{element.value}}"
        {{#error}}
            autofocus aria-describedby="{{element.iderror}}"
        {{/error}}
            {{{element.attributes}}} >
        <output id="{{element.id}}-value" class="form-confidence-range-value" for="{{element.id}}">{{element.value}}%</output>
    {{/element}}
{{/ core_form/element-template }}