{{!
    @template registrationrule_altcha/altcha_widget

    Display a configured Altcha widget.

    Context variables required for this template:
        * element
            * id
            * name
            * value

    Example context (json):
    {
        "element": {
            "wrapperid": "fitem_id_hiddenfield",
            "id": "id_hiddenfield",
            "name": "hiddenfield",
            "value": "",
            "iderror": "id_error"
        }
    }
}}
{{< core_form/element-template }}
    {{$element}}
        <script src="https://cdn.jsdelivr.net/npm/altcha/dist/altcha.min.js" async type="module"></script>
        <altcha-widget
            name="{{element.name}}"
            maxnumber="{{maxnumber}}"
            challengejson="{{challengejson}}"
            strings="{{strings}}"
        ></altcha-widget>
    {{/element}}
{{/ core_form/element-template }}