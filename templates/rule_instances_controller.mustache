<div class="tool_registrationrules-managerules">
    <table class="table generaltable">
        <thead>
        <tr>
            <th>sort order</th>
            <th>enabled</th>
            <th>type</th>
            <th>name</th>
            <th>points</th>
            <th>fallback points</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>{{#instances}}
            <tr>
                <td>{{sortorder}}</td>
                <td>{{{enabled}}}</td>{{!TODO all of it!}}
                <td>{{type}}</td>
                <td>{{name}}</td>
                <td>{{points}}</td>
                <td>{{fallbackpoints}}</td>
                <td>{{#actions}}{{>core/action_menu}}{{/actions}}</td>
            </tr>
        {{/instances}}</tbody>
    </table>
    <div class="dropdown show">
        <a class="btn btn-text dropdown-toggle" href="#" role="button" id="addRule" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            add rule
        </a>

        <div class="dropdown-menu" aria-labelledby="addRule">{{#types}}
            <a class="dropdown-item" href="{{addurl}}">{{name}}</a>
        {{/types}}
        </div>
    </div>
</div>
